<Window x:Class="Goliath.CreaRoutine"
        ResizeMode="NoResize" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goliath"
        mc:Ignorable="d"
        Title="CreaRoutine" Height="450" Width="800">
    <Grid Background="#FF393939">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="283*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="eserciziPresenti"  Margin="28,74,560,125" RenderTransformOrigin="0.5,0.5" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Background="#FFA4A4A4">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.164"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Label Content="Esercizi Presenti:" HorizontalAlignment="Left" Margin="30,40,0,0" VerticalAlignment="Top" Foreground="#FFA076C8"/>
        <Label Content="Numero serie:" HorizontalAlignment="Left" Margin="17,74,0,0" VerticalAlignment="Top" Width="101" Background="#00000000" Foreground="#FFA076C8" Grid.Column="1"/>
        <Label Content="Numero ripetizioni:" HorizontalAlignment="Left" Margin="10,186,0,0" VerticalAlignment="Top" Width="115" Background="#00000000" Foreground="#FFA076C8" Grid.Column="1"/>
        <TextBox x:Name="ripetizioniBox" HorizontalAlignment="Left" Margin="130,181,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="133" Height="18" Grid.Column="1" Background="#FFA4A4A4"/>
        <Label Content="Carico:" HorizontalAlignment="Left" Margin="47,217,0,0" VerticalAlignment="Top" Width="59" Background="#00000000" Foreground="#FFA076C8" Grid.Column="1"/>

        <TextBox x:Name="caricoBox" HorizontalAlignment="Left" Margin="133,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="133" Height="21" Grid.Column="1" Background="#FFA4A4A4"/>


        <Button x:Name="buttonIndietro" Content="Indietro" HorizontalAlignment="Left" Height="41" Margin="463,365,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FEA36AD7"/>
                    <GradientStop Color="#FF9A9A9A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Label Content="Nome esercizio:" HorizontalAlignment="Left" Margin="27,262,0,0" VerticalAlignment="Top" Background="#00000000" Foreground="#FFA076C8" Grid.Column="1"/>
        <TextBlock x:Name="nomeEsercizioBlock" HorizontalAlignment="Left" Margin="133,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="132" Background="#FFA6A6A6" Grid.Column="1"/>

        <Button x:Name="ButtonAggiungiEsercizio" Content="Aggiungi esercizio" HorizontalAlignment="Left" Height="42" Margin="297,230,0,0" VerticalAlignment="Top" Width="128" Click="ButtonAggiungiEsercizio_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FEA36AD7"/>
                    <GradientStop Color="#FF9A9A9A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Label Content="Nome routine:" HorizontalAlignment="Left" Margin="401,40,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1" Foreground="#FFA076C8"/>
        <TextBox x:Name="nomeRoutineBox" HorizontalAlignment="Left" Margin="401,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Grid.Column="1" Height="21" Background="#FFA4A4A4"/>
        <Button x:Name="buttonCercaEsercizio" Content="Cerca esercizio" HorizontalAlignment="Left" Margin="34,334,0,0" VerticalAlignment="Top" Height="42" Width="112" Click="buttonCercaEsercizio_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FEA36AD7"/>
                    <GradientStop Color="#FF9A9A9A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="buttonSalvaRoutine" Content="Salva routine" HorizontalAlignment="Left" Height="41" Margin="449,112,0,0" VerticalAlignment="Top" Width="90" Click="buttonSalvaRoutine_Click" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FEA36AD7"/>
                    <GradientStop Color="#FF9A9A9A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonAggiungiSerie" Content="AggiungiSerie" HorizontalAlignment="Left" Height="42" Margin="130,308,0,0" VerticalAlignment="Top" Width="128" Grid.Column="1" Click="ButtonAggiungiSerie_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FEA36AD7"/>
                    <GradientStop Color="#FF9A9A9A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox x:Name="SerieList" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="118,54,296,264"/>
    </Grid>
</Window>
