<UserControl x:Class="Goliath.EsercizioCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Goliath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10" Padding="10" Background="White">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="titleBlock" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Rectangle x:Name="videoBox" Height="150" Fill="Gray" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Serie: " FontWeight="Bold"/>
                    <TextBlock x:Name="serieBlock"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ripetizioni: " FontWeight="Bold"/>
                    <TextBlock x:Name="repBlock"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
