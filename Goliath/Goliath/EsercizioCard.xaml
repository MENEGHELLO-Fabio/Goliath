<UserControl x:Class="Goliath.EsercizioCard"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Goliath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="1" CornerRadius="0" Margin="-4,10,10,10" Padding="10" Background="#FFC7C7C7">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Nome esercizio: " FontWeight="Bold" Foreground="#FF5F5A5A"/>
                    <TextBlock x:Name="nomeEsercizioBlock" Text="H"/>
                </StackPanel>
                <MediaElement x:Name="videoBox" Height="150" LoadedBehavior="Manual" MediaEnded="videoBox_MediaEnded" UnloadedBehavior="Stop"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Serie: " FontWeight="Bold" Foreground="#FF5F5A5A"/>

                </StackPanel>
                <ListBox x:Name="SerieList" Height="100" SelectionChanged="SerieList_SelectionChanged" Background="#FFC7C7C7"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ripetizioni: " FontWeight="Bold" Foreground="#FF5F5A5A"/>
                    <TextBlock x:Name="repBlock"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Carico: " FontWeight="Bold" Foreground="#FF2A294C"/>
                    <TextBlock x:Name="caricoBlock"/>
                </StackPanel>


            </StackPanel>
        </Border>

    </Grid>
</UserControl>
