<UserControl x:Class="Goliath.cardDescrizioneAllenamento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Goliath"
             mc:Ignorable="d">

    <Border Background="#FFA6A6A6"
            CornerRadius="12"
            Margin="10"
            Padding="20">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="ALLENAMENTO:"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="Black"/>

            <TextBlock x:Name="tipoRoutine"
                       Grid.Row="1"
                       FontSize="22"
                       Margin="0,5,0,0"
                       Foreground="Black"/>

            <TextBlock x:Name="dataAllenamento"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="18"
                       Foreground="Black"/>

        </Grid>

    </Border>
</UserControl>
