<Window x:Class="Goliath.Exercises"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goliath"
        mc:Ignorable="d"
        Title="Exercises" Height="450" Width="800">
    <Grid Margin="73,29,73,69">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="VideosListBox" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalContentAlignment="Stretch" SelectionChanged="VideosListBox_SelectionChanged" Grid.RowSpan="2"/>
        <MediaElement x:Name="videoPlayer" Grid.Column="1" Margin="57,28,71,142" UnloadedBehavior="Manual" Grid.RowSpan="2"/>
        <StackPanel x:Name="___Nessun_nome_" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,214,0,0" Grid.Row="1">
            <Button Content="Play" Click="Play_Click" Margin="4"/>
            <Button Content="Pause" Click="Pause_Click" Margin="4"/>
            <Button Content="Stop" Click="Stop_Click" Margin="4"/>
        </StackPanel>
        <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="427" Margin="-72,-28,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="796">
            <Button x:Name="buttonHome" Content="Home" HorizontalAlignment="Left" Height="42" Margin="443,278,0,0" VerticalAlignment="Top" Width="137" Click="buttonHome_Click"/>
        </Grid>
    </Grid>
</Window>
