<Window x:Class="Goliath.AllenamentoFinestra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goliath"
        mc:Ignorable="d"
        Title="AllenamentoFinestra" Height="450" Width="800">

    <Grid>
        <Grid x:Name="grid2" Margin="10,10,473,10" Background="#FFC3C3C3">
            <Label Content="SELEZIONA LA ROUTINE CON CUI ALLENARTI" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="27" Width="271"/>
            <ListView x:Name="routinesList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="23,56,46,101">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="buttonStart" Content="avvia allenamento" HorizontalAlignment="Left" Margin="74,350,0,0" VerticalAlignment="Top" Height="29" Width="146" Click="buttonStart_Click"/>
        </Grid>
        <Grid x:Name="grid3" Background="#FFC8C8C8" Margin="0,0,146,0">
            <ScrollViewer x:Name="finestraScrolla">
                <StackPanel x:Name="panel" Width="630"/>
            </ScrollViewer>
        </Grid>
        <Button x:Name="buttonIndietro" Content="indietro" HorizontalAlignment="Left" Height="56" Margin="659,351,0,0" VerticalAlignment="Top" Width="111" Click="buttonIndietro_Click"/>
    </Grid>
</Window>
