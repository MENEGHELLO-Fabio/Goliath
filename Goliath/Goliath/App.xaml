<Application x:Class="Goliath.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Stile globale per tutti i Button: colori grigi coerenti con la MainWindow -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD3D3D3"/>     <!-- grigio chiaro -->
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>     <!-- bordo leggermente scuro -->
            <Setter Property="Foreground" Value="#FF222222"/>     <!-- testo scuro -->
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFBFBFBF"/> <!-- hover grigio -->
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF9E9E9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF9E9E9E"/> <!-- pressed più scuro -->
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF7F7F7F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#FFE8E8E8"/>
                                <Setter Property="Foreground" Value="#FF9A9A9A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
