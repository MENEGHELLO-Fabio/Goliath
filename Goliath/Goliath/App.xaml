<Application x:Class="Goliath.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Stile globale per tutti i Button: colori grigi coerenti con la MainWindow -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD3D3D3"/>     <!-- grigio chiaro -->
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>     <!-- bordo leggermente scuro -->
            <Setter Property="Foreground" Value="#FF222222"/>     <!-- testo scuro -->
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF6D6D6D"/> <!-- hover grigio -->
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF6D6D6D"/> <!-- pressed più scuro -->
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF444444"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#FF6D6D6D"/>
                                <Setter Property="Foreground" Value="#FF444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Font moderno per le Label: usa Segoe UI (sistema) come scelta moderna minimal -->
        <FontFamily x:Key="AppLabelFont">Segoe UI, Arial, Sans-Serif</FontFamily>

        <!-- Stile globale per Label: applica font, dimensione e colore -->
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource AppLabelFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF2B2B2B"/>
        </Style>

    </Application.Resources>
</Application>
