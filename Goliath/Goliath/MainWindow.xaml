<Window x:Class="Goliath.MainWindow"
        ResizeMode="NoResize" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goliath"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="202*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="434" Stroke="Black" VerticalAlignment="Top" Width="239" Fill="#FF393939" Grid.RowSpan="2"/>
        <Button x:Name="tempButtonProfiles" Content="PROFILE" HorizontalAlignment="Left" Margin="37,262,0,0" VerticalAlignment="Top" Height="41" Width="161" Click="tempButtonProfiles_Click" Background="#FFC6C6C6" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="tempButtonRoutines" Content="ROUTINES" HorizontalAlignment="Left" Margin="39,145,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonRoutines_Click" Background="#FFC2C2C2" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="tempButtonExercises" Content="EXERCISES" HorizontalAlignment="Left" Margin="39,204,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonExercises_Click" Background="#FFC3C3C3" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="LabelGoliath" Content="GOLIATH" Margin="0,0,592,341" VerticalAlignment="Bottom" Width="177" FontFamily="Showcard Gothic" FontSize="36" Background="#FF393939" Foreground="#FF858585" HorizontalAlignment="Right" Height="57" ClipToBounds="True" Grid.Row="1">
        </Label>
        <ScrollViewer x:Name="barraScorrimento" Margin="239,0,0,0" Background="White" BorderBrush="White" Foreground="Black" Grid.RowSpan="2">
            <StackPanel x:Name="panel" Width="548" Background="#FF393939"/>
        </ScrollViewer>
        <Button x:Name="tempButtonAllenamento" Content="AVVIA ALLENAMENTO" HorizontalAlignment="Left" Margin="39,85,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonAllenamento_Click" Background="Silver" Grid.Row="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle Stroke="#FF2A294C" Margin="222,-15,549,-15" Fill="#FF2A294C" Grid.RowSpan="2"/>

    </Grid>
</Window>
