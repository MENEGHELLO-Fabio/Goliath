<Window x:Class="Goliath.MainWindow"
        ResizeMode="NoResize" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goliath"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="434" Stroke="Black" VerticalAlignment="Center" Width="239" Fill="#FF393939"/>
        <Button x:Name="tempButtonProfiles" Content="PROFILE" HorizontalAlignment="Left" Margin="18,275,0,0" VerticalAlignment="Top" Height="41" Width="161" Click="tempButtonProfiles_Click" Background="#FFC6C6C6">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="tempButtonRoutines" Content="ROUTINES" HorizontalAlignment="Left" Margin="20,158,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonRoutines_Click" Background="#FFC2C2C2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="tempButtonExercises" Content="EXERCISES" HorizontalAlignment="Left" Margin="20,217,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonExercises_Click" Background="#FFC3C3C3">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="LabelGoliath" Content="GOLIATH" Margin="0,0,592,341" VerticalAlignment="Bottom" Width="177" FontFamily="Showcard Gothic" FontSize="36" Background="#FF393939" Foreground="#FF858585" HorizontalAlignment="Right" Height="57" ClipToBounds="True">
        </Label>
        <ScrollViewer x:Name="barraScorrimento" Margin="239,0,0,0" Background="White" BorderBrush="White" Foreground="Black">
            <StackPanel x:Name="panel" Width="561" Background="#FFE3E3E3"/>
        </ScrollViewer>
        <Button x:Name="tempButtonAllenamento" FontFamily="Arial Nova" Content="AVVIA ALLENAMENTO" HorizontalAlignment="Left" Margin="20,98,0,0" VerticalAlignment="Top" Height="42" Width="161" Click="tempButtonAllenamento_Click" Background="Silver">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
